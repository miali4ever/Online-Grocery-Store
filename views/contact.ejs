<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">

    <form action="/contactus" method="POST">

      <div class="form-group">
        <label >Full name</label>
        <input type="name" name="fullname" class="form-control" placeholder="Enter your full name here">
      </div>

      <div class="form-group">
        <label>Email address</label>
        <input type="email" name="email" class="form-control" placeholder="Enter your email here">
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">Message</label>
        <textarea type="message" name="message" class="form-control" rows="5"></textarea>
      </div>

      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>

<%- include('partials/footer') %>
